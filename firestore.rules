rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Any authenticated user can read/write any user's document for debugging
    match /artifacts/default-app-id/public/data/users/{userId} {
      allow read, write: if request.auth != null;
    }

    // Authenticated users can read all other public data.
    // The recursive wildcard {document=**} matches documents and collections.
    match /artifacts/default-app-id/public/data/{document=**} {
      allow read: if request.auth != null;
    }
  }
}
